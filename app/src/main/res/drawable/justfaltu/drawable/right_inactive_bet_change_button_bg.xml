<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="#bebebe"
                        android:endColor="#616161"
                        android:angle="270"/>
                    <corners android:bottomRightRadius="@dimen/homeTileTextHeight"
                        android:topRightRadius="@dimen/homeTileTextHeight"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#bebebe"
                android:endColor="#616161"
                android:angle="270"/>
            <corners android:bottomRightRadius="@dimen/homeTileTextHeight"
                android:topRightRadius="@dimen/homeTileTextHeight"/>
        </shape>

    </item>
</selector>