<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/undodicewidth"
    android:layout_height="@dimen/undodiceheight">
<RelativeLayout
    android:id="@+id/rlundo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_new"
    >

    <RelativeLayout
        android:layout_width="@dimen/undodicewidth"
        android:layout_height="@dimen/innerlayoutheight"
        android:background="@drawable/bg_lightblue"
        android:layout_margin="4dp">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/undodicerolltag"
            android:textColor="@color/colorYellow"
            app:fontFamily="@font/varelaround_regular" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/textView3"
            android:background="@drawable/dialog_text_view_bg"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="@string/undodiceinstruction" />
        <TextView
            android:id="@+id/tvleft_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView5"
            android:text="Undo Left"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tvleft_yellow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:layout_below="@+id/textView5"
            android:layout_toRightOf="@+id/tvleft_"
            android:background="@drawable/dark_blue_with_yellow_stroke_bg"
            android:text="25"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvon_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView5"
            android:layout_toLeftOf="@+id/tvundoon"
            android:text="Undo On"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            />
        <CheckBox
            android:id="@+id/tvundoon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView5"
            android:background="@drawable/dark_blue_with_yellow_stroke_bg"
            android:textColor="@color/colorWhite"
            android:padding="2dp"
            android:gravity="center"
            />
    </RelativeLayout>

</RelativeLayout>
    <ImageView
        android:layout_below="@+id/rlundo"
        android:layout_width="34dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:rotation="180"
        android:src="@drawable/bottem_notch_dialog_bg"/>

</RelativeLayout>
