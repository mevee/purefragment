            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_weight="2"
                android:background="@color/colorBlack"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/colorWhite" />

            <ImageView
                android:id="@+id/i2"
                android:layout_width="@dimen/width15"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:background="@drawable/bgforaddmore"
                android:src="@drawable/add" />
        </LinearLayout>

        <ImageView
            android:id="@+id/i"
            android:layout_width="@dimen/lenth34"
            android:layout_height="@dimen/lenth34"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/gem" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_layout_green"
        android:layout_width="@dimen/margin50dp"
        android:layout_height="@dimen/margin65dp"
