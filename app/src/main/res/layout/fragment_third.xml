            android:layout_width="@dimen/margin50dp"
            android:layout_height="@dimen/margin50dp"
            android:layout_margin="@dimen/strokewidth1dp"
            android:background="@drawable/dice_1" />
    </RelativeLayout>

    <RelativeLayout
