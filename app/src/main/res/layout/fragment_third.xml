    <!--below is centerd ludo gam-->

    <!--bottom users left-->

    <RelativeLayout
        android:id="@+id/user_layout_red"
        android:layout_width="@dimen/margin50dp"
        android:layout_height="@dimen/margin50dp"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="@dimen/margin67dp"
        android:layout_marginLeft="@dimen/lenth10"
        android:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_red"
            android:layout_width="@dimen/margin50dp"
            android:layout_height="@dimen/margin50dp"
            android:background="@drawable/red_stroke_circle"
            android:src="@drawable/robot_3" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ludo_layout_red"
        android:layout_width="@dimen/margin50dp"
        android:layout_height="@dimen/margin50dp"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="@dimen/margin67dp"
        android:layout_marginLeft="66dp"
        android:background="@drawable/reddice_bg"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ludo_image_view_red"
            android:layout_width="@dimen/margin50dp"
            android:layout_height="@dimen/margin50dp"
            android:layout_margin="1dp"
            android:background="@drawable/dice_1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/width24"
        android:layout_height="@dimen/margin50dp"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="@dimen/margin67dp"
        android:layout_marginLeft="@dimen/lenth120dp">

        <ImageView
            android:layout_width="@dimen/lenth20"
            android:layout_height="@dimen/lenth20"
            android:layout_marginTop="2dp"
            android:src="@drawable/undo" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/width2dp"
            android:layout_marginLeft="@dimen/width2dp"
            android:src="@drawable/gem" />

        <TextView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/width2dp"
            android:layout_toRightOf="@id/iv1"
            android:text="2"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />
    </RelativeLayout>

    <!--bottom usser_right-->

    <RelativeLayout
        android:id="@+id/user_layout_blue"
        android:layout_width="@dimen/margin50dp"
        android:layout_height="@dimen/margin70dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="47dp"
        android:layout_marginRight="@dimen/lenth10"
        android:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_blue"
            android:layout_width="@dimen/margin50dp"
            android:layout_height="@dimen/margin50dp"
            android:background="@drawable/red_stroke_circle"
            android:src="@drawable/robot_1" />

        <TextView
            android:id="@+id/user_nrame_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_image_blue"
            android:layout_marginTop="2dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLength="7"
            android:singleLine="true"
            android:text="Username"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ludo_layout_blue"
        android:layout_width="@dimen/margin50dp"
        android:layout_height="@dimen/margin50dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/margin67dp"
