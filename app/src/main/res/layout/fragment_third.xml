            android:src="@drawable/robot_3" />

        <TextView
            android:id="@+id/user_name_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/user_image_green"
            android:layout_marginTop="2dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLength="7"
            android:singleLine="true"
            android:text="Username"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ludo_layout_green"
        android:layout_width="@dimen/margin50dp"
        android:layout_height="@dimen/margin50dp"
