        android:visibility="visible">

        <ImageView
            android:id="@+id/ludo_image_view_blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@drawable/dice_1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/lenth20"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="@dimen/margin40dp"
        android:layout_marginLeft="@dimen/lenth10"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bgrounfcornersblack">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/lenth20"
                android:layout_height="@dimen/lenth20"
                android:layout_margin="@dimen/strokewidth1dp"
                android:src="@drawable/emoji_icon" />

            <TextView
                android:id="@+id/emoji"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="Emoji"
                android:textColor="@color/colorWhite"
                android:textSize="8sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width8"
            android:background="@drawable/bgrounfcornersblack"
            android:paddingRight="6dp">

            <ImageView
                android:id="@+id/ivicon"
                android:layout_width="@dimen/lenth20"
                android:layout_height="@dimen/lenth20"
                android:layout_margin="@dimen/strokewidth1dp"
                android:src="@drawable/chat_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ivicon"
                android:gravity="center"
                android:text="Chat"
                android:textColor="@color/colorWhite"
                android:textSize="8sp" />
        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btnplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/width24"
        android:layout_marginRight="@dimen/widthsignlesquare148"
        android:text="Play" />

    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="@dimen/lenth34"
        android:layout_gravity="bottom" />

