<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="false"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/lenth10"
    android:layout_marginRight="@dimen/lenth10"
    android:background="@drawable/bg_of_dialog"
    app:layout_anchorGravity="center">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="93dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/dialog_text_title_view_bg"
        android:gravity="center"
        android:padding="2dp"
        android:text="TextView"
        android:textColor="@color/colorYellow"
        android:textSize="14sp"
        app:fontFamily="@font/asap_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/content_of_dialog"
        android:layout_width="277dp"
        android:layout_height="99dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/dialog_text_view_bg"
        android:gravity="center"
        android:text="@string/exitdialogcon"
        android:textColor="@color/colorWhite"
        app:fontFamily="@font/varelaround_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title" />

    <TextView
        android:id="@+id/tvcancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/dialog_text_view_bg"
        android:padding="4dp"
        android:text="@string/yes"
        android:textColor="@color/colorWhite"
        app:fontFamily="@font/raleway_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_of_dialog"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/dialog_text_view_bg"
        android:padding="4dp"
        android:gravity="center"
        android:text="@string/no"
        android:textColor="@color/colorWhite"
        app:fontFamily="@font/raleway_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_of_dialog"
        app:layout_constraintVertical_bias="0.0" />

   </android.support.constraint.ConstraintLayout>
