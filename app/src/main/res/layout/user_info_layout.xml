<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/lenth10"
    android:layout_marginRight="@dimen/lenth10"
    android:background="@drawable/bg_of_dialog"
    app:layout_anchorGravity="center">

   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/ivuser"
       android:layout_width="64dp"
       android:layout_height="64dp"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="10dp"
       android:background="@drawable/bgforroundimage"
       android:src="@drawable/robot_1"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivuser"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/varelaround_regular"
        android:textColor="@color/colorWhite"
        android:text="User xyz"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/userfrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/country_flag"
        android:layout_below="@+id/username"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/varelaround_regular"
        android:textColor="@color/colorGreyWhite"
        android:text="User"
        android:gravity="center"
        android:textSize="10dp"/>
    <ImageView
        android:id="@+id/country_flag"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:background="@color/colorWhite"
        android:layout_toRightOf="@+id/ivuser"
        android:layout_below="@+id/username"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        />
    <TextView
        android:id="@+id/playerlevel"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="55dp"
        android:background="@drawable/dialog_text_player_number_bg"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:text="3"
        android:gravity="center"
        android:fontFamily="@font/varelaround_regular"
        android:textColor="@color/colorWhite"/>
    <ImageView
        android:id="@+id/edituser"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        />
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ivuser"
        android:background="@drawable/dialog_text_view_bg"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="TextView"
            android:fontFamily="@font/varelaround_regular"
            android:textColor="@color/colorGreyWhite" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="|"
            android:fontFamily="@font/varelaround_regular"
            android:textColor="@color/colorGreyWhite" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="TextView"
            android:fontFamily="@font/varelaround_regular"
            android:textColor="@color/colorGreyWhite" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="115dp"
       android:layout_below="@+id/ll3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/dialog_text_view_bg">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/varelaround_regular"
            android:text="Game Won"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/varelaround_regular"
            android:text="Winning Percentage"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/varelaround_regular"
            android:text="Best Winning Streak"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/varelaround_regular"
            android:text="T"
            android:textColor="@color/colorYellow" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/varelaround_regular"
            android:text="T"
            android:textColor="@color/colorYellow" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView2"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/varelaround_regular"
            android:text="T"
            android:textColor="@color/colorYellow" />

    </RelativeLayout>

    <TextView
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="App Version:5.35"
        android:fontFamily="@font/varelaround_regular"
        android:textColor="@color/colorGreyWhite" />=

</RelativeLayout>
