<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     >
    <RelativeLayout
        android:id="@+id/rr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_new"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_lightblue"
            android:layout_margin="4dp"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_View_Chat_text"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:id="@+id/emojiwithnobase"
                android:layout_below="@+id/recycler_View_Chat_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/emoji1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/emoji1"/>
                <ImageView
                    android:id="@+id/emoji2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/emoji_2"/>
                <ImageView
                    android:id="@+id/emoji3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/emoji_3"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/emoji4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/emoji_4"/>
                <ImageView
                    android:id="@+id/emoji5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/emoji_5"/>
                <ImageView
                    android:id="@+id/emoji6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/emoji_6"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutbottom"
                android:layout_below="@+id/emojiwithnobase"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/emojif1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/emoji_laugh"/>
                <ImageView
                    android:id="@+id/emojif2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/emoji_cry"/>
                <ImageView
                    android:id="@+id/emojif3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/emoji_angry"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/emojif4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/emoji_cry"/>
            </LinearLayout>
        </RelativeLayout>
        </RelativeLayout>
    
    <ImageView
        android:layout_below="@+id/rr1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:rotation="180"
        android:layout_alignParentLeft="true"
        android:src="@drawable/bottem_notch_dialog_bg"/>

</RelativeLayout>
